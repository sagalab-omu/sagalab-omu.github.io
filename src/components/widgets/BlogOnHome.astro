---
import { APP_BLOG } from 'astrowind:config';

import Grid from '~/components/blog/GridOnHome.astro';

import { getBlogPermalink } from '~/utils/permalinks';
import { findLatestPosts } from '~/utils/blog';
import WidgetWrapper from '~/components/ui/WidgetWrapper.astro';
import type { Widget } from '~/types';
import Button from '~/components/ui/Button.astro';

export interface Props extends Widget {
  title?: string;
  linkText?: string;
  linkUrl?: string | URL;
  information?: string;
  count?: number;
}

const {
  title = await Astro.slots.render('title'),
  linkText = 'View all posts',
  linkUrl = getBlogPermalink(),
  information = await Astro.slots.render('information'),
  count = 4,

  id,
  isDark = false,
  classes = {},
  bg = await Astro.slots.render('bg'),
} = Astro.props;

const posts = APP_BLOG.isEnabled ? await findLatestPosts({ count }) : [];
---

{
  APP_BLOG.isEnabled ? (
    <WidgetWrapper id={id} isDark={isDark} containerClass={classes?.container as string} bg={bg}>
      <div class="flex flex-col lg:justify-between mb-8">
        <h2
          class="text-center text-4xl font-bold tracking-tight sm:text-4xl sm:leading-none group font-heading mb-2"
          set:html={title}
        />

        {information && <p class="text-muted dark:text-slate-400 lg:text-sm lg:max-w-md" set:html={information} />}
      </div>

      <Grid posts={posts} />
      <div class="flex flex-col lg:justify-between mb-8 mt-8">
        {APP_BLOG.list.isEnabled && linkText && linkUrl && (
          <Button variant="link" href={linkUrl} class="ml-auto">
            {' '}
            {linkText} Â»
          </Button>
        )}
      </div>
    </WidgetWrapper>
  ) : (
    <Fragment />
  )
}
